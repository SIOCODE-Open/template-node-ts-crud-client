
entity OrganizationUnit {
    col name: String
    // Employees in the org unit
    reverse join employees: List<Employee>(org_unit)
}

// An employee
entity Employee {
    col first_name: String (not empty)
    col last_name: String (not empty)
    // Org unit of employee
    join org_unit: OrganizationUnit
    col birth_date: LocalDate (not null)
    col last_seen_at: Instant
}

entity Shift {
    col begins_at: LocalTime (not null)
    col ends_at: LocalTime (not null)
}
